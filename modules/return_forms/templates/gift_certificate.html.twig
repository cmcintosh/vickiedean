<div class="simple_blog-category">
    <div id="page">
      <div class="container">
        <ul class="breadcrumb">
          <li><a href="/front"><i class="fa fa-home"></i></a></li>
          <li><a href="/login">Account</a></li>
          <li><a href="#">Gift Voucher</a></li>
        </ul>
        <div class="row"> 
          <div id="content" class="col-sm-12"> 
            <h1>Purchase a Gift Certificate</h1>
            <p>This gift certificate will be emailed to the recipient after your order has been paid for.</p>
              <div class="form-group required">
                <label class="col-sm-2 control-label">Recipient's Name</label>
                <div class="col-sm-10">
                  {{ form.recipientname }}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label">Recipient's E-mail</label>
                <div class="col-sm-10">
                  {{form.recipientemail}}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label">Your Name</label>
                <div class="col-sm-10">           
                  {{form.yourname}}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label">Your E-mail</label> 
                <div class="col-sm-10">         
                  {{form.youremail}}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Gift Certificate Theme</label>
                <div class="col-sm-10">
                  <div class="radio">
                    {{form.general}}
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-message">
                  <span data-toggle="tooltip" title="Optional">Message</span>
                </label>
                <div class="col-sm-10">
                  {{form.message}}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-amount">
                  <span data-toggle="tooltip" title="Value must be between $1.00 and $1,000.00">
                    Amount
                  </span>
                </label>
                <div class="col-sm-10">
                  {{form.amount}}
                </div>
              </div>
          
            <div class="buttons clearfix">
              <div class="pull-right">
              <div class="col-sm-8">
                {{form.understand}} 
              </div>
              <div class="col-sm-2">{{form.actions.submit}}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 
</div>     