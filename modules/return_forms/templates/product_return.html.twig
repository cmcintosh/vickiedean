<div class="simple_blog-category">
    <div id="page">
      <div class="container">
        <ul class="breadcrumb">
          <li><a href="/front"><i class="fa fa-home"></i></a></li>
          <li><a href="/login">Account</a></li>
          <li><a href="#">Product Returns</a></li>
        </ul>
        <div class="row"> 
          <div id="content" class="col-sm-12"> 
            <h1>Product Returns</h1>
            <p>Please complete the form below to request an RMA number.</p>
              <fieldset>
                <legend>Order Information</legend>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-firstname">First Name</label>
                  <div class="col-sm-10">
                    {{ form.fname }}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-lastname">Last Name</label>
                  <div class="col-sm-10">
                    {{form.lname}}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-email">E-Mail</label>
                  <div class="col-sm-10">
                    {{form.email}}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-telephone">Telephone</label>
                  <div class="col-sm-10">
                    {{form.tel_num}}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-order-id">Order ID</label>
                  <div class="col-sm-10">
                    {{form.order_id}}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-date-ordered">Order Date</label>
                  <div class="col-sm-3">
                    <div class="input-group date">
                      {{form.order_date}}
                      <span class="input-group-btn">
                        <button type="button" class="btn btn-default">
                          <i class="fa fa-calendar"></i>
                        </button>
                      </span>
                    </div>
                  </div>
                </div>
              </fieldset>
              <fieldset>
                <legend>Product Information &amp; Reason for Return</legend>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-product">Product Name</label>
                  <div class="col-sm-10">
                    {{form.product_name}}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-model">Product Code</label>
                  <div class="col-sm-10">
                    {{form.product_code}}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-quantity">Quantity</label>
                  <div class="col-sm-10">
                    {{form.quantity}}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Reason for Return</label>
                  <div class="col-sm-10">
                    <div class="radio">
                      {{form.reason}}
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Product is opened</label>
                  <div class="col-sm-10">
                      {{form.open}}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-comment">
                    Faulty or other details
                  </label>
                  <div class="col-sm-10">
                    {{form.details}}
                  </div>
                </div>
              </fieldset>
              <div class="buttons clearfix">
                <div class="pull-left">
                  <a href="vickiedean.dev" >{{form.actions.back}}</a>
                </div>
                <div class="pull-right">
                  {{form.actions.submit}}
                </div>
              </div>
          </div>
        </div>
      </div>
    </div> 
</div>     